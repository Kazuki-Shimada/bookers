<h1 class="editing-book">Editing Book<h1>

<% if @book.errors.any? %>
  <div class="error-message">
    <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book,  method: :patch do |f| %>

<div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>

<div class="field">
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>

  <%= f.submit 'Update Book' %>

  <%= link_to "Show",  book_path(@book.id) %>
  |
  <%= link_to "Back", '/books' %>
<% end %>

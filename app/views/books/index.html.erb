<h1>Books</h1>
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Show' %>
  <%= f.submit 'Edit' %>
  <%= f.submit 'Destroy' %>
<% end %>
